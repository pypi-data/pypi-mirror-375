<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mrp_batch_produce_form" model="ir.ui.view">
        <field name="name">view_mrp_batch_produce_form</field>
        <field name="model">mrp.batch.produce</field>
        <field name="inherit_id" ref="mrp.view_mrp_batch_produce_form" />
        <field name="arch" type="xml">
            <field name="production_text" position="after">
                <div
                    class="alert alert-warning"
                    role="alert"
                    invisible="not lot_number_propagation_alert_msg"
                >
                    <field name="lot_number_propagation_alert_msg" />
                </div>
            </field>
        </field>
    </record>
</odoo>
