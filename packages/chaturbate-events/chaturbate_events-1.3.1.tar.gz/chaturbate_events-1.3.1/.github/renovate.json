{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:best-practices"
  ],

  "automergeType": "branch",
  "commitMessageLowerCase": "auto",
  "dependencyDashboard": true,
  "enabledManagers": [
    "github-actions",
    "pep723",
    "pep621",
    "pre-commit"
  ],
  "internalChecksAsSuccess": false,
  "internalChecksFilter": "strict",
  "labels": [
    "dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "at any time"
    ],
    "automerge": true
  },
  "minimumReleaseAge": "14 days",
  "platformAutomerge": false,
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "rebaseWhen": "auto",
  "schedule": [
    "at any time"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "timezone": "America/Edmonton",

  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ],

  "packageRules": [
    {
      "description": "Do not automerge major updates; label as breaking, assign MountainGod2",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "automerge": false,
      "assignees": [
        "MountainGod2"
      ]
    },
    {
      "description": "Automerge and auto-approve minor, patch, and digest updates, including type definitions",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Prevent Renovate from changing requires-python in pyproject.toml",
      "matchManagers": [
        "pep621"
      ],
      "ignoreDeps": [
        "python"
      ]
    },
    {
      "description": "Ignore minimum release wait time for pep723 updates to chaturbate-events",
      "matchManagers": [
        "pep723"
      ],
      "matchDepNames": [
        "chaturbate-events"
      ],
      "minimumReleaseAge": "0"
    }
  ],

  "pep723": {
    "enabled": true,
    "managerFilePatterns": [
      "/examples/.*\\.py$/",
      "/examples/.*\\.pyw$/"
    ]
  },
  "pre-commit": {
    "enabled": true
  }
}
