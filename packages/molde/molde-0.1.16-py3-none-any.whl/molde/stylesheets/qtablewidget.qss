QTableWidget:focus {
    border: none;
}

QTableWidget::item {
    background-color: none;
}

QTableWidget::item:selected {
    background-color: @primary;
    color: @on-primary;
}

QHeaderView::section {
    background-color: @background-variant;
    border: 1px solid @border-color;
}

QHeaderView::section:on:enabled {
    color: @primary;
}

QTableCornerButton::section {
    background-color: @background-variant;
    padding: 5px 5px;
    border: 1px solid @border-color;
}
