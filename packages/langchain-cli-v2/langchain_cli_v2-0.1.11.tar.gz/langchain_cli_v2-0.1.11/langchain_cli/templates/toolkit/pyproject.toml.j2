[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ package_name }}"
version = "0.1.0"
description = "{{ toolkit_name }} toolkit for LangChain"
requires-python = ">=3.10"

dependencies = [
    "langchain-tool-server>=0.0.15",
]

[tool.setuptools.packages.find]
where = ["."]
include = ["{{ package_name }}*"]