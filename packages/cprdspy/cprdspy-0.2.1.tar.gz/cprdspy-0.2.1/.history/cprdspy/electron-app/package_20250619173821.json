{
    "name": "cprdspy",
    "productName": "CPR波形可视化",
    "version": "1.0.0",
    "description": "CPR波形数据可视化分析工具",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "cross-env NODE_ENV=development electron .",
        "prepare-python": "node prepare-python.js",
        "build": "npm run prepare-python && electron-builder",
        "build:win": "npm run prepare-python && electron-builder --win",
        "build:mac": "npm run prepare-python && electron-builder --mac",
        "build:linux": "npm run prepare-python && electron-builder --linux"
    },
    "keywords": [
        "CPR",
        "波形",
        "可视化",
        "医疗",
        "Dash",
        "Plotly",
        "Electron"
    ],
    "author": {
        "name": "Your Name",
        "email": "your.email@example.com"
    },
    "license": "MIT",
    "dependencies": {
        "electron-log": "^4.4.8",
        "electron-store": "^8.1.0",
        "electron-updater": "^5.3.0",
        "fs-extra": "^11.1.1"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "electron": "^25.3.1",
        "electron-builder": "^24.4.0",
        "electron-reloader": "^1.2.3"
    },
    "build": {
        "appId": "com.yourcompany.cprdspy",
        "productName": "CPR波形可视化",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "python",
                "to": "python",
                "filter": [
                    "**/*",
                    "!**/__pycache__/**",
                    "!**/*.pyc"
                ]
            }
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "src/assets/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "src/assets/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "src/assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}