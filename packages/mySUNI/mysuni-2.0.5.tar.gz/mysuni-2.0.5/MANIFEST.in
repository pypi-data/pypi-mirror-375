# 패키지에 포함할 추가 파일들
include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt
include pyproject.toml

# 데이터 파일들 (있다면)
recursive-include mySUNI *.json
recursive-include mySUNI *.txt
recursive-include mySUNI *.md

# 제외할 파일들
exclude .gitignore
exclude *.pyc
exclude *.pyo
exclude *~
exclude .DS_Store
exclude Thumbs.db

# 제외할 디렉토리들
prune .git
prune .pytest_cache
prune __pycache__
prune *.egg-info
prune build
prune dist
prune .vscode
prune .idea

# 테스트 파일들 (있다면 포함)
recursive-include tests *.py
recursive-exclude tests __pycache__
recursive-exclude tests *.pyc
