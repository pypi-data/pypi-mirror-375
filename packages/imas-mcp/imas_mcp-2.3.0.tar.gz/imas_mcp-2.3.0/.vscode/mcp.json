{
  "servers": {
    // "imas": {
    //   "url": "https://imas-dd.iter.org/mcp/",
    //   "type": "http"
    // },
    // note: first initialize of imas-debug will take ~10 minutes to build the DD embeddings
    "imas-debug": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--active",
        "imas-mcp",
        "--no-rich",
        "--log-level",
        "INFO",
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${input:github_mcp_pat}"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "github_mcp_pat",
      "description": "GitHub Personal Access Token",
      "password": true
    }
  ]
}
