  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "feature1": {
      "field": "feature1",
      "type": "text",
      "minLength": 1,
      "maxLength": 40
    },
    "feature2": {
      "field": "feature2",
      "type": "text",
      "minLength": 1,
      "maxLength": 40
    },
    "feature3": {
      "field": "feature3",
      "type": "text",
      "minLength": 1,
      "maxLength": 40
    },
    "feature4": {
      "field": "feature4",
      "type": "text",
      "minLength": 1,
      "maxLength": 40
    },
    "feature_title": {
      "field": "feature_title",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
