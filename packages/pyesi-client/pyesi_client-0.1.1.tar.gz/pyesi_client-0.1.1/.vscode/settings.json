{
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "search.exclude": { ".venv": true, "uv.lock": true },
  "editor.formatOnSave": true,
  "ruff.enable": true,
  "ruff.lint.enable": true,
  "python.analysis.autoImportCompletions": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": [
      "source.fixAll.ruff",
      "source.organizeImports.ruff"
      // "source.addMissingImports" // Doesn't work ðŸ˜­
    ]
  },
  "[json][jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[yaml]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[toml]": { "editor.defaultFormatter": "tamasfe.even-better-toml" },
  "[env]": { "editor.defaultFormatter": "IronGeek.vscode-env" },
  "cSpell.words": ["sessionmaker", "levelname", "ASGIApp", "VARCHAR", "TIMESTAMPTZ", "RRULE", "pyesi", "SSOPKCE"]
}
