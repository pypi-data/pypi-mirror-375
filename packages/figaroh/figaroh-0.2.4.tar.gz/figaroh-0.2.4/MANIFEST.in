# Include essential files
include README.md
include LICENSE
include pyproject.toml
include environment.yml

# Include source code
recursive-include src/figaroh *.py

# Include documentation source
recursive-include docs/source *.rst *.py
include docs/Makefile docs/make.bat

# Exclude examples and models from distribution
prune examples
prune models
prune docs/build

# Exclude development files
exclude .gitignore
exclude *.yml
global-exclude *.pyc
global-exclude .DS_Store
