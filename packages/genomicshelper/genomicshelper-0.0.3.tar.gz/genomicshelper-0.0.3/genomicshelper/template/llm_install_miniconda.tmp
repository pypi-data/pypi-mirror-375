#!/bin/bash
## Install Miniconda for Python environments
#################################
## NOTE #########################
## This script downloads and installs Miniconda, a lightweight version of Anaconda.
## It sets up conda for managing Python environments. The install directory and Python version can be customized.
#################################
## ARGUMENTS ####################
## install_dir : Installation directory (default: $HOME/miniconda3)
## python_version : Python version for conda (default: 3.9)
## SCRIPT #####################

INSTALL_DIR=${install_dir:-$HOME/miniconda3}
PYTHON_VERSION=${python_version:-3.9}

wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O miniconda.sh
bash miniconda.sh -b -p $INSTALL_DIR
rm miniconda.sh

# Initialize conda
source $INSTALL_DIR/bin/activate
conda init bash

echo "Miniconda installed at $INSTALL_DIR"
echo "Please restart your shell or run 'source ~/.bashrc' to use conda"