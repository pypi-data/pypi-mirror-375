<odoo>
    <record id="view_delivery_carrier_tree" model="ir.ui.view">
        <field name="name">Delivery Carrier Vehicle Tree</field>
        <field name="model">delivery.carrier</field>
        <field
            name="inherit_id"
            ref="delivery_driver.view_delivery_carrier_tree_inherit_delivery_driver"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='driver_id']" position="before">
                <field name="vehicle_id" optional="hide" />
            </xpath>
        </field>
    </record>

    <record id="view_delivery_carrier_search" model="ir.ui.view">
        <field name="name">Delivery Carrier Fleet Search</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_search" />
        <field name="arch" type="xml">
            <xpath expr="field[@name='delivery_type']" position="after">
                <field name="vehicle_id" />
            </xpath>
            <xpath expr="//filter[@name='provider']" position="after">
                <filter
                    name="vehicle_id"
                    string="Vehicle"
                    context="{'group_by':'vehicle_id'}"
                />
            </xpath>
        </field>
    </record>

    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">Delivery Carrier Vehicle Form</field>
        <field name="model">delivery.carrier</field>
        <field
            name="inherit_id"
            ref="delivery_driver.view_delivery_carrier_form_inherit_delivery_driver"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='driver_id']" position="before">
                <field name="vehicle_id" options="{'no_create': True}" />
            </xpath>
        </field>
    </record>
</odoo>
