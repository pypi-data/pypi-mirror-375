include AUTHORS.rst
include CONTRIBUTING.rst
include HISTORY.rst
include LICENSE
include README.rst
include pyproject.toml

# Include package source code
recursive-include clabtoolkit *.py
recursive-include clabtoolkit/config *.json

# Include documentation
recursive-include docs *.rst *.py *.bat *.png
recursive-include docs Makefile
include docs/make.bat

# EXCLUDE tests data completely  
prune tests

# Exclude unwanted files (only those that exist)
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
