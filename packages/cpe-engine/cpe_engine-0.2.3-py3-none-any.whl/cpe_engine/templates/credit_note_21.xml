<?xml version="1.0" encoding="utf-8"?>
<CreditNote xmlns="urn:oasis:names:specification:ubl:schema:xsd:CreditNote-2" 
           xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2" 
           xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2" 
           xmlns:ds="http://www.w3.org/2000/09/xmldsig#" 
           xmlns:ext="urn:oasis:names:specification:ubl:schema:xsd:CommonExtensionComponents-2"
           xmlns:sac="urn:sunat:names:specification:ubl:peru:schema:xsd:SunatAggregateComponents-1">
    <ext:UBLExtensions>
        <ext:UBLExtension>
            <ext:ExtensionContent/>
        </ext:UBLExtension>
    </ext:UBLExtensions>
    <cbc:UBLVersionID>{{ doc.ubl_version }}</cbc:UBLVersionID>
    <cbc:CustomizationID>2.0</cbc:CustomizationID>
    <cbc:ID>{{ doc.serie }}-{{ doc.correlativo }}</cbc:ID>
    <cbc:IssueDate>{{ doc.fecha_emision | format_date }}</cbc:IssueDate>
    <cbc:IssueTime>{{ doc.fecha_emision | format_time }}</cbc:IssueTime>
    {% for legend in doc.legends %}
    <cbc:Note languageLocaleID="{{ legend.code }}"><![CDATA[{{ legend.value }}]]></cbc:Note>
    {% endfor %}
    <cbc:DocumentCurrencyCode>{{ doc.tipo_moneda }}</cbc:DocumentCurrencyCode>
    
    <!-- Motivo de la nota -->
    <cac:DiscrepancyResponse>
        <cbc:ReferenceID>{{ doc.num_doc_afectado }}</cbc:ReferenceID>
        <cbc:ResponseCode>{{ doc.cod_motivo }}</cbc:ResponseCode>
        <cbc:Description><![CDATA[{{ doc.des_motivo }}]]></cbc:Description>
    </cac:DiscrepancyResponse>
    
    <!-- Documento afectado -->
    <cac:BillingReference>
        <cac:InvoiceDocumentReference>
            <cbc:ID>{{ doc.num_doc_afectado }}</cbc:ID>
            <cbc:DocumentTypeCode>{{ doc.tip_doc_afectado }}</cbc:DocumentTypeCode>
        </cac:InvoiceDocumentReference>
    </cac:BillingReference>
    
    <!-- Firma Digital -->
    <cac:Signature>
        <cbc:ID>{{ doc.company.ruc }}</cbc:ID>
        <cac:SignatoryParty>
            <cac:PartyIdentification>
                <cbc:ID>{{ doc.company.ruc }}</cbc:ID>
            </cac:PartyIdentification>
            <cac:PartyName>
                <cbc:Name><![CDATA[{{ doc.company.razon_social }}]]></cbc:Name>
            </cac:PartyName>
        </cac:SignatoryParty>
        <cac:DigitalSignatureAttachment>
            <cac:ExternalReference>
                <cbc:URI>#SignatureSP</cbc:URI>
            </cac:ExternalReference>
        </cac:DigitalSignatureAttachment>
    </cac:Signature>
    
    <!-- Datos del Emisor -->
    <cac:AccountingSupplierParty>
        <cac:Party>
            <cac:PartyIdentification>
                <cbc:ID schemeID="6">{{ doc.company.ruc }}</cbc:ID>
            </cac:PartyIdentification>
            <cac:PartyName>
                <cbc:Name><![CDATA[{{ doc.company.nombre_comercial or doc.company.razon_social }}]]></cbc:Name>
            </cac:PartyName>
            <cac:PartyLegalEntity>
                <cbc:RegistrationName><![CDATA[{{ doc.company.razon_social }}]]></cbc:RegistrationName>
                <cac:RegistrationAddress>
                    <cbc:ID schemeAgencyName="PE:INEI">{{ doc.company.address.ubigeo }}</cbc:ID>
                    <cbc:AddressTypeCode>0000</cbc:AddressTypeCode>
                    <cbc:CitySubdivisionName>{{ doc.company.address.urbanizacion or 'NONE' }}</cbc:CitySubdivisionName>
                    <cbc:CityName>{{ doc.company.address.provincia }}</cbc:CityName>
                    <cbc:CountrySubentity>{{ doc.company.address.departamento }}</cbc:CountrySubentity>
                    <cbc:District>{{ doc.company.address.distrito }}</cbc:District>
                    <cac:AddressLine>
                        <cbc:Line><![CDATA[{{ doc.company.address.direccion }}]]></cbc:Line>
                    </cac:AddressLine>
                    <cac:Country>
                        <cbc:IdentificationCode>PE</cbc:IdentificationCode>
                    </cac:Country>
                </cac:RegistrationAddress>
            </cac:PartyLegalEntity>
        </cac:Party>
    </cac:AccountingSupplierParty>
    
    <!-- Datos del Receptor -->
    <cac:AccountingCustomerParty>
        <cac:Party>
            <cac:PartyIdentification>
                <cbc:ID schemeID="{{ doc.client.tipo_doc }}">{{ doc.client.num_doc }}</cbc:ID>
            </cac:PartyIdentification>
            <cac:PartyLegalEntity>
                <cbc:RegistrationName><![CDATA[{{ doc.client.razon_social }}]]></cbc:RegistrationName>
            </cac:PartyLegalEntity>
        </cac:Party>
    </cac:AccountingCustomerParty>
    
    <!-- Formas de pago y cuotas -->
    {% if doc.forma_pago %}
    <cac:PaymentTerms>
        <cbc:ID>FormaPago</cbc:ID>
        <cbc:PaymentMeansID>{{ doc.forma_pago.tipo }}</cbc:PaymentMeansID>
        {% if doc.forma_pago.monto %}
        <cbc:Amount currencyID="{{ doc.forma_pago.moneda or doc.tipo_moneda }}">{{ doc.forma_pago.monto | format_decimal }}</cbc:Amount>
        {% endif %}
    </cac:PaymentTerms>
    {% endif %}
    
    {% if doc.cuotas %}
    {% for cuota in doc.cuotas %}
    <cac:PaymentTerms>
        <cbc:ID>FormaPago</cbc:ID>
        <cbc:PaymentMeansID>Cuota{{ "%03d"|format(loop.index) }}</cbc:PaymentMeansID>
        <cbc:Amount currencyID="{{ cuota.moneda }}">{{ cuota.monto | format_decimal }}</cbc:Amount>
        <cbc:PaymentDueDate>{{ cuota.fecha_pago | format_date }}</cbc:PaymentDueDate>
    </cac:PaymentTerms>
    {% endfor %}
    {% endif %}
    
    <!-- Totales Tributarios -->
    <cac:TaxTotal>
        <cbc:TaxAmount currencyID="{{ doc.tipo_moneda }}">{{ doc.mto_total_tributos | format_decimal }}</cbc:TaxAmount>
        {% if doc.mto_igv > 0 %}
        <cac:TaxSubtotal>
            <cbc:TaxableAmount currencyID="{{ doc.tipo_moneda }}">{{ doc.mto_oper_gravadas | format_decimal }}</cbc:TaxableAmount>
            <cbc:TaxAmount currencyID="{{ doc.tipo_moneda }}">{{ doc.mto_igv | format_decimal }}</cbc:TaxAmount>
            <cac:TaxCategory>
                <cac:TaxScheme>
                    <cbc:ID>1000</cbc:ID>
                    <cbc:Name>IGV</cbc:Name>
                    <cbc:TaxTypeCode>VAT</cbc:TaxTypeCode>
                </cac:TaxScheme>
            </cac:TaxCategory>
        </cac:TaxSubtotal>
        {% endif %}
    </cac:TaxTotal>
    
    <!-- Total Legal Monetary -->
    <cac:LegalMonetaryTotal>
        <cbc:PayableAmount currencyID="{{ doc.tipo_moneda }}">{{ doc.mto_impventa | format_decimal }}</cbc:PayableAmount>
    </cac:LegalMonetaryTotal>
    
    <!-- Líneas de detalle -->
    {% for detail in doc.details %}
    <cac:CreditNoteLine>
        <cbc:ID>{{ loop.index }}</cbc:ID>
        <cbc:CreditedQuantity unitCode="{{ detail.unidad }}">{{ detail.cantidad | format_decimal }}</cbc:CreditedQuantity>
        <cbc:LineExtensionAmount currencyID="{{ doc.tipo_moneda }}">{{ detail.mto_valor_venta | format_decimal }}</cbc:LineExtensionAmount>
        
        <!-- Referencia de precio -->
        <cac:PricingReference>
            <cac:AlternativeConditionPrice>
                <cbc:PriceAmount currencyID="{{ doc.tipo_moneda }}">{{ detail.mto_precio_unitario | format_decimal }}</cbc:PriceAmount>
                <cbc:PriceTypeCode>01</cbc:PriceTypeCode>
            </cac:AlternativeConditionPrice>
        </cac:PricingReference>
        
        <!-- Impuestos de la línea -->
        <cac:TaxTotal>
            <cbc:TaxAmount currencyID="{{ doc.tipo_moneda }}">{{ detail.total_impuestos | format_decimal }}</cbc:TaxAmount>
            <cac:TaxSubtotal>
                <cbc:TaxableAmount currencyID="{{ doc.tipo_moneda }}">{{ detail.mto_valor_venta | format_decimal }}</cbc:TaxableAmount>
                <cbc:TaxAmount currencyID="{{ doc.tipo_moneda }}">{{ detail.igv | format_decimal }}</cbc:TaxAmount>
                <cac:TaxCategory>
                    <cbc:Percent>{{ detail.porcentaje_igv | format_decimal }}</cbc:Percent>
                    <cbc:TaxExemptionReasonCode>{{ detail.tip_afe_igv }}</cbc:TaxExemptionReasonCode>
                    {% set afect = detail.tip_afe_igv | get_tributo_afect %}
                    <cac:TaxScheme>
                        <cbc:ID>{{ afect.id }}</cbc:ID>
                        <cbc:Name>{{ afect.name }}</cbc:Name>
                        <cbc:TaxTypeCode>{{ afect.code }}</cbc:TaxTypeCode>
                    </cac:TaxScheme>
                </cac:TaxCategory>
            </cac:TaxSubtotal>
        </cac:TaxTotal>
        
        <!-- Información del producto -->
        <cac:Item>
            <cbc:Description><![CDATA[{{ detail.des_item }}]]></cbc:Description>
            <cac:SellersItemIdentification>
                <cbc:ID>{{ detail.cod_item }}</cbc:ID>
            </cac:SellersItemIdentification>
        </cac:Item>
        
        <!-- Precio -->
        <cac:Price>
            <cbc:PriceAmount currencyID="{{ doc.tipo_moneda }}">{{ detail.mto_valor_unitario | format_decimal }}</cbc:PriceAmount>
        </cac:Price>
    </cac:CreditNoteLine>
    {% endfor %}
</CreditNote>