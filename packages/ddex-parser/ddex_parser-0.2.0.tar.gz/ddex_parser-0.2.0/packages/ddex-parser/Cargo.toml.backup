# packages/ddex-parser/Cargo.toml (using workspace deps)
[package]
name = "ddex-parser"
version.workspace = true
edition.workspace = true
license.workspace = true
repository.workspace = true
authors.workspace = true
description = "High-performance DDEX XML parser"
keywords = ["ddex", "xml", "parser", "music", "metadata"]
categories = ["parser-implementations", "multimedia::audio"]

[dependencies]
# Core dependency
ddex-core = { path = "../core" }

# Use workspace dependencies
quick-xml = { workspace = true }
thiserror = { workspace = true }
chrono = { workspace = true }
tracing = { workspace = true }
serde = { workspace = true }
serde_json = { workspace = true }
uuid = { workspace = true }

# Parser-specific dependencies not in workspace
memchr = "2.7"
ahash = "0.8"
parking_lot = "0.12"
bytes = "1.5"

# Optional workspace dependencies
tokio = { workspace = true, optional = true }
futures = { workspace = true, optional = true }
ts-rs = { workspace = true, optional = true }

# CLI dependencies
clap = { version = "4.4", features = ["derive", "env", "color", "suggestions"] }
clap_complete = "4.4"
env_logger = "0.11"
log = "0.4"
indicatif = "0.17"
colored = "2.1"
anyhow = "1.0"
rayon = "1.8"
glob = "0.3"
csv = "1.3"
serde_yaml = "0.9"
toml = "0.8"
rmp-serde = "1.1"

[dev-dependencies]
criterion = { workspace = true, features = ["html_reports"] }
tempfile = { workspace = true }
pretty_assertions = { workspace = true }
proptest = { workspace = true }
test-case = { workspace = true }
insta = { workspace = true }

[features]
default = ["async"]
async = ["tokio", "futures"]
cli = ["clap", "clap_complete", "env_logger", "indicatif", "colored"]
typescript = ["ts-rs", "ddex-core/ts-rs"]
simd = []
bench = []

# Binaries
[[bin]]
name = "ddex-parser"
path = "src/main.rs"
required-features = ["cli"]

[[bin]]
name = "generate-bench-report"
path = "src/bin/bench_report.rs"
required-features = ["async"]

# Benchmarks
[[bench]]
name = "parsing"
harness = false

[[bench]]
name = "streaming"
harness = false

[[bench]]
name = "memory"
harness = false

