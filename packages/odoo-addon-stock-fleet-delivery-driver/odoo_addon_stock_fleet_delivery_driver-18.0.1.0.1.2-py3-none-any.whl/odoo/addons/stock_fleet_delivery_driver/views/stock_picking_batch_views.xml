<odoo>
    <record id="stock_picking_batch_form" model="ir.ui.view">
        <field name="name">stock.picking.batch.form.inherit.delivery.fleet</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_fleet.stock_picking_batch_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vehicle_id']" position="after">
                <field name="driver_id" placeholder="Driver of the Vehicle" />
            </xpath>
        </field>
    </record>
    <record id="inherit_view_id_inherit_module_name" model="ir.ui.view">
        <field name="name">stock.picking.batch.list.inherit.delivery.fleet</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_fleet.stock_picking_batch_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vehicle_id']" position="after">
                <field name="driver_id" optional="hide" />
            </xpath>
        </field>
    </record>
</odoo>
