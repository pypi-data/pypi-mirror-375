<?xml version="1.0" ?>
<odoo>
    <record id="l10n_br_fiscal_res_config_settings_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='settings_delivery_costs']" position="after">
                <setting
                    id="settings_cert_expired_alert"
                    title="Certificate expiration alert"
                >
                    <field name="cert_expired_alert" />
                    <span>Days before</span>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
