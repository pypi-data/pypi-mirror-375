#!/bin/bash
## 
#################################
## NOTE #########################
## 
#################################
## ARGUMENTS ####################
## sumstats :
## ref_seq:
## out :
## in_fmt = auto
## build=19
## out_fmt = gwaslab
## SCRIPT #####################

python3 <<EOF
import gwaslab as gl

mysumstats = gl.Sumstats("${sumstats}",
             fmt="${infmt}",
             build="${build}", 
             verbose=True)

mysumstats.basic_check()

mysumstats.harmonize(
    basic_check=False,
    ref_seq = "${refseq}"
)

mysumstats.to_format("${out}", fmt="${outfmt}")

EOF