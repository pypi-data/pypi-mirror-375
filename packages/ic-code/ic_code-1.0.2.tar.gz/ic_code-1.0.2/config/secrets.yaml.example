# Example secrets configuration file
# Copy this file to secrets.yaml and fill in your actual values

# AWS Configuration
aws:
  accounts:
    - "123456789012"  # Replace with your AWS account ID
    - "987654321098"  # Add more account IDs as needed
  
  profiles:
    default: "your-aws-profile-name"
    # Add more profiles as needed

# CloudFlare Configuration  
cloudflare:
  email: "your-email@example.com"
  api_token: "your-cloudflare-api-token"
  cloudflare_accounts: "account1,account2"  # Comma-separated account names
  cloudflare_zones: "zone1,zone2"           # Comma-separated zone names

# SSH Configuration (Security-sensitive settings)
ssh:
  key_dir: "~/aws-key"  # Directory containing SSH keys
  skip_prefixes:        # Server prefixes to skip (security-sensitive)
    - "git"
    - "bastion"
    - "jump"
    - "proxy"
    # Add more prefixes as needed

# OCI Configuration
oci:
  config_file: "~/.oci/config"
  profile: "DEFAULT"

# Other sensitive configurations
other:
  # Add other sensitive configurations here