#!/bin/bash
## Show numbers of samples and variants in the bcf files using bcftools.
#################################
## NOTE #########################
## 
#################################
## ARGUMENTS ####################
## vcf : input vcf
## SCRIPT #####################

echo "Number of variants:"
bcftools view -G -H ${vcf} | wc -l

echo "Number of samples:"
bcftools query -l ${vcf} | wc -l