<style>
  .site-footer {
    margin-top: 1rem;
    padding: 0 1rem 1rem;
    text-align: center;
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
  }
  .site-footer a {
    color: var(--sl-color-gray-3);
    text-decoration: none;
  }
  .site-footer a:hover {
    text-decoration: underline;
  }
  .author-name {
    font-weight: bold;
    color: var(--sl-color-gray-2);
  }
