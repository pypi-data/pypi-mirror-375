#!/bin/bash
## Infer ancestry from sumstats CHR and POS
#################################
## NOTE #########################
## 
#################################
## ARGUMENTS ####################
## sumstats :
## in_fmt = auto:
## ancestry_af = 1kg_hm3_hg19_eaf
## SCRIPT #####################

python3 <<EOF
import gwaslab as gl

mysumstats = gl.Sumstats("${sumstats}",
             fmt="${in_fmt}",
             nrows=100000,
             verbose=True)

if gl.get_path("${ancestry_af}") is None:
    gl.download_ref("${ancestry_af}")

mysumstats.infer_ancestry(ancestry_af = gl.get_path("${ancestry_af}"))

EOF