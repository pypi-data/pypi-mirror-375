<odoo>
    <record id="view_crm_phonecall_result_list" model="ir.ui.view">
        <field name="name">crm.phonecall.result.list</field>
        <field name="model">crm.phonecall.result</field>
        <field name="arch" type="xml">
            <list>
                <field name="priority" widget="handle" />
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="view_crm_phonecall_result_form" model="ir.ui.view">
        <field name="name">crm.phonecall.result.form</field>
        <field name="model">crm.phonecall.result</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group class="oe_title">
                        <h1>
                            <field name="name" required="1" />
                        </h1>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_crm_phonecall_result" model="ir.actions.act_window">
        <field name="name">Call results</field>
        <field name="res_model">crm.phonecall.result</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        action="action_crm_phonecall_result"
        id="menu_crm_phonecall_result"
        name="Call results"
        parent="crm_phonecall.menu_crm_config_phonecall"
        sequence="30"
    />
</odoo>
