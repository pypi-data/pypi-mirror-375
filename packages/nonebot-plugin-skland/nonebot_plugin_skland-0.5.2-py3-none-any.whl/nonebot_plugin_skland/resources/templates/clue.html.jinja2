<!DOCTYPE html>

<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <title>Clue Board</title>
    <style>
        {% include "index.css" %}

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            opacity: 0.35;
            z-index: -1;
            background:
                repeating-linear-gradient(to right,
                    rgba(255, 255, 255, 0.4) 0,
                    rgba(255, 255, 255, 0.4) 2px,
                    transparent 1px,
                    transparent 20px),
                repeating-linear-gradient(to bottom,
                    rgba(255, 255, 255, 0.4) 0,
                    rgba(255, 255, 255, 0.4) 2px,
                    transparent 1px,
                    transparent 20px),
                url('../images/clue/bg_rhodes_flower_1_left.png') center / cover no-repeat;
        }
    </style>
</head>

<body
    class="flex items-center justify-center min-h-screen bg-slate-800 relative border-6 border-slate-600 rounded-2xl reg-shadow">

    <div class="w-[90vw] max-w-5xl aspect-video p-5 relative">
        <div class="relative w-full h-full rounded-md">
            {% set clue_layout_map = {
            "RHINE": {"id": 1, "name": "莱茵科技"},
            "PENGUIN": {"id": 2, "name": "企鹅物流"},
            "BLACKSTEEL": {"id": 3, "name": "黑钢国际"},
            "URSUS": {"id": 4, "name": "乌萨斯"},
            "GLASGOW": {"id": 5, "name": "格拉斯哥帮"},
            "KJERAG": {"id": 6, "name": "谢拉格"},
            "RHODES": {"id": 7, "name": "罗德岛"},
            } %}

            {% for clue_name, clue_data in clue_layout_map.items() %}
            <div class="absolute p-1 origin-center w-[160px] h-[200px] clue-{{ clue_data.id }}
                {% if clue_name not in clue.board %}opacity-45{% endif %}">
                <div
                    class="absolute -top-2.5 left-1/2 -translate-x-1/2 bg-black/80 text-white py-0.5 px-3 rounded-full text-xs font-bold z-10">
                    CLUE {{ clue_data.id }}
                </div>
                <div
                    class="absolute top-2.5 left-1/2 -translate-x-1/2 w-3 h-3 bg-yellow-400 rounded-full border-2 border-white shadow-[0_0_5px_theme(colors.yellow.400)] z-10">
                </div>
                <img class="block w-full h-full {{ 'found-clue-glow' if clue_name in clue.board else 'missing-clue-glow' }}"
                    src="../images/clue/{{ clue_name | lower}}.png" alt="{{ clue_data.name }}">
            </div>
            {% endfor %}
        </div>
    </div>
</body>

</html>