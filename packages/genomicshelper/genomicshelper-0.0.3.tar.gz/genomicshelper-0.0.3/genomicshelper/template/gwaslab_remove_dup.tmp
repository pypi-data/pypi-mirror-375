#!/bin/bash
## Infer ancestry from sumstats CHR and POS
#################################
## NOTE #########################
## 
#################################
## ARGUMENTS ####################
## sumstats :
## out :
## build=19
## in_fmt = auto :
## out_fmt= gwaslab
## SCRIPT #####################

python3 <<EOF
import gwaslab as gl

mysumstats = gl.Sumstats("${sumstats}",
             fmt="${in_fmt}",
             build="${build}", 
             verbose=True)

mysumstats.fix_id()
mysumstats.fix_chr()
mysumstats.fix_pos()
mysumstats.fix_allele()

mysumstats.remove_dup(mode="nmd")

mysumstats.to_format("${out}", fmt="${out_fmt}")

EOF