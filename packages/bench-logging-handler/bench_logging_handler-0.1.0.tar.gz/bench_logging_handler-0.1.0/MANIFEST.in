# Include the license file
include LICENSE

# Include the README files
include README.md
include README.ko.md

# Include the requirements file
include requirements.txt

# Include configuration files
include pyproject.toml


# Include all Python files
recursive-include src/bench_logging_handler *.py

# Exclude test files and logs from distribution
recursive-exclude tests *
recursive-exclude examples *
recursive-exclude log *
exclude *.log
exclude *.json
exclude *.html
exclude demo_logs*
exclude test_logs*

# Exclude development files
exclude .gitignore
exclude .gitattributes
exclude Makefile
exclude venv
recursive-exclude venv *
exclude .vscode
recursive-exclude .vscode *
exclude .idea
recursive-exclude .idea *
