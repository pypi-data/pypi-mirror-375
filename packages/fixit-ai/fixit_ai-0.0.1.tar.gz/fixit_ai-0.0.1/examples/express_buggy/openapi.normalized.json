{
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "bearerFormat": "JWT",
        "scheme": "bearer",
        "type": "http"
      }
    }
  },
  "info": {
    "title": "Buggy Express API",
    "version": "1.0.0"
  },
  "openapi": "3.0.0",
  "paths": {
    "/api/auth/login": {
      "post": {
        "deprecated": false,
        "endpoint_id": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "type": "object"
              }
            }
          },
          "required": false
        },
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "401": {
            "description": "Invalid credentials"
          }
        },
        "summary": "Login"
      }
    },
    "/api/users": {
      "post": {
        "deprecated": false,
        "endpoint_id": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "type": "object"
              }
            }
          },
          "required": false
        },
        "responses": {
          "201": {
            "description": "User created"
          },
          "409": {
            "description": "User already exists"
          }
        },
        "summary": "Create user"
      }
    },
    "/api/users/{id}": {
      "get": {
        "deprecated": false,
        "endpoint_id": "",
        "parameters": [
          {
            "deprecated": false,
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User found"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Get user"
      }
    },
    "/health": {
      "get": {
        "deprecated": false,
        "endpoint_id": "",
        "responses": {
          "200": {
            "description": "API is healthy"
          }
        },
        "summary": "Health check"
      }
    }
  }
}