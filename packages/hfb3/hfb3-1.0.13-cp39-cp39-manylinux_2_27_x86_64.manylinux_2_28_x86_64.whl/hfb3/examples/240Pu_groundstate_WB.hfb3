#!HFB3!#

# Example of an HFB calculation for the ground state of a 240Pu nucleus using Woods-Saxon -> Broyden solvers.

[action]
basisOptimization True
jobName           240Pu_groundstate_WB

[interaction]
name              D1S

[solver]
alternator/scheme WB

[basis]
nOscil            11
d_0               10.5
b_r               2.0
b_z               2.6
g_q               1.3

[constraints]
q10t              0.0

[system]
nProt             94
nNeut             146
