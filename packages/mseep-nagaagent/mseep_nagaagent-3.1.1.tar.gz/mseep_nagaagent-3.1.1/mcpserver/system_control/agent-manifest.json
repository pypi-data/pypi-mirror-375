{
  "name": "系统控制服务",
  "displayName": "系统控制服务",
  "version": "1.0.0",
  "description": "支持电脑控制：定时关机、定时重启、屏幕亮度调节、音量调节。",
  "author": "NagaAgent",
  "agentType": "mcp",
  "entryPoint": {
    "module": "mcpserver.system_control.agent_system_control",
    "class": "SystemControlAgent"
  },
  "factory": {
    "create_instance": "create_system_control_agent"
  },
  "communication": {
    "protocol": "stdio",
    "timeout": 15000
  },
  "capabilities": {
    "invocationCommands": [
      {
        "command": "定时关机",
        "description": "定时关机；参数：time（定时关机秒数，可选，默认0立即）",
        "example": "{\"tool_name\":\"定时关机\",\"time\":60}"
      },
      {
        "command": "定时重启",
        "description": "定时重启；参数：time（定时重启秒数，可选，默认0立即）",
        "example": "{\"tool_name\":\"定时重启\",\"time\":60}"
      },
      {
        "command": "设置亮度",
        "description": "设置屏幕亮度；参数：value（亮度值，0-100）",
        "example": "{\"tool_name\":\"设置亮度\",\"value\":80}"
      },
      {
        "command": "设置音量",
        "description": "设置系统音量；参数：value（音量值，0-100）",
        "example": "{\"tool_name\":\"设置音量\",\"value\":50}"
      }
    ]
  },
  "inputSchema": {
    "type": "object",
    "properties": {
      "tool_name": {"type": "string", "description": "工具名称：定时关机/定时重启/设置亮度/设置音量"},
      "time": {"type": "integer", "description": "定时关机或重启秒数（定时关机/定时重启时可选）"},
      "value": {"type": "integer", "description": "亮度或音量值（0-100，设置亮度/设置音量时必需）"}
    },
    "required": ["tool_name"]
  },
  "configSchema": {
    "SYSTEM_CONTROL_AGENT_TIMEOUT": "integer"
  },
  "runtime": {
    "instance": null,
    "is_initialized": false,
    "last_used": null,
    "usage_count": 0
  }
} 