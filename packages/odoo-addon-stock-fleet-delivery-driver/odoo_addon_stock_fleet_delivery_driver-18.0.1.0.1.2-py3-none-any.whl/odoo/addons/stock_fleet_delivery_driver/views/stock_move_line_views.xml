<odoo>
    <record id="view_move_line_tree_detailed_delivery" model="ir.ui.view">
        <field name="name">Stock Move Line Tree Detailed Vehicle</field>
        <field name="model">stock.move.line</field>
        <field
            name="inherit_id"
            ref="stock_delivery.view_move_line_tree_detailed_delivery"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='carrier_id']" position="after">
                <field name="vehicle_id" optional="hide" />
            </xpath>
        </field>
    </record>
    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="name">Stock Move Line Tree Vehicle</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_dest_id']" position="after">
                <field name="vehicle_id" optional="hide" />
            </xpath>
        </field>
    </record>
</odoo>
