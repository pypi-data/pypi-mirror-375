python3 <<EOF
import gwaslab as gl

gl1 = gl.load_pickle("gl1.pickle")
gl2 = gl.load_pickle("gl2.pickle")

gl.plot_stacked_mqq(objects=[gl1,gl2],
                    vcfs=[gl.get_path("1kg_eas_hg19"), gl.get_path("1kg_eas_hg19")],
                    region_legend_marker=True,
                    region=(19,46214297 - 50000, 46214297 + 50000),
                    region_ref =["rs35560038","rs1055220"], 
                    build="19",
                    anno="SNPID",
                    region_hspace=0.07,
                    fontsize=15,
                    cbar_fontsize=10,
                    cbar_scale=True,
                    cbar_h_scale=0.7,
                    mode="r",
                    marker_size=(100,100),
                    save="text_20250305.pdf",
                    titles=["Male","Female"],
                    fig_args={"dpi":500},
                    title_args={"size":20},
                    anno_args={"rotation":0,"fontsize":10}, 
                    verbose=False, 
                    check=False)

EOF