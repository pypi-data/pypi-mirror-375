include README.md
include LICENSE
include requirements.txt
include pyproject.toml
include benchmark.yaml
include production_benchmark.yaml
include install.sh

# Include only the Python package files
recursive-include clyrdia *.py

# Exclude unnecessary files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * node_modules
recursive-exclude * .next
recursive-exclude * .git
recursive-exclude * dist
recursive-exclude * build
recursive-exclude * *.log
recursive-exclude * .env*
recursive-exclude * .DS_Store
recursive-exclude * .vscode
recursive-exclude * .idea
recursive-exclude * *.egg-info
recursive-exclude * .pytest_cache
recursive-exclude * .coverage
recursive-exclude * htmlcov
recursive-exclude * .tox
recursive-exclude * .mypy_cache

# Exclude dashboard directory (now separate application)
recursive-exclude dashboard *
