<odoo>
    <record id="fsm_equipment_form_view_stock" model="ir.ui.view">
        <field name="model">fsm.equipment</field>
        <field
            name="inherit_id"
            ref="fieldservice_equipment_stock.fsm_equipment_form_view_stock"
        />
        <field name="arch" type="xml">
            <field name="lot_id" position="after">
                <field
                    name="warranty_start_date"
                    string="Warranty Period"
                    widget="daterange"
                    options="{'end_date_field': 'warranty_end_date'}"
                />
                <field name="warranty_end_date" invisible="1" />
                <label
                    name="product_warranty"
                    for="product_warranty"
                    string="Product Warranty"
                />
                <div>
                    <field name="product_warranty" class="oe_inline" />
                    <field name="product_warranty_type" class="oe_inline" />
                </div>
            </field>
        </field>
    </record>

    <record id="fsm_equipment_list_view_model" model="ir.ui.view">
        <field name="model">fsm.equipment</field>
        <field
            name="inherit_id"
            ref="fieldservice_equipment_stock.fsm_equipment_list_view_model"
        />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="warranty_start_date" />
                <field name="warranty_end_date" />
            </field>
        </field>
    </record>
</odoo>
