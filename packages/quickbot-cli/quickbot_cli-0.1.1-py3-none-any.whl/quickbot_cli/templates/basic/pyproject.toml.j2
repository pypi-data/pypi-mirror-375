[project]
name = "{{ project_name | replace(' ', '-') | lower }}"
version = "0.1.0"
description = "{{ description }}"
authors = [{ name = "{{ author }}" }]
readme = "README.md"
requires-python = ">=3.13"

dependencies = [
  {% if include_i18n %}"quickbot[i18n,cli]>=0.1.1",{% else %}"quickbot[cli]>=0.1.1",{% endif %}
  {% if include_alembic %}"alembic",{% endif %}
]