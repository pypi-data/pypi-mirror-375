# SemWare Configuration File
# Copy this file to .env and update the values

# ==============================================================================
# REQUIRED SETTINGS
# ==============================================================================

# API Key for authentication (REQUIRED)
# Generate a secure random key: openssl rand -base64 32
API_KEY=your-super-secret-api-key-here

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# Enable debug mode and API documentation (true/false)
DEBUG=false

# Server host and port
HOST=0.0.0.0
PORT=8000

# Number of worker processes (for production)
WORKERS=1

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Path to store vector database files
DB_PATH=./data

# ==============================================================================
# EMBEDDING MODEL CONFIGURATION
# ==============================================================================

# Hugging Face model name for embeddings
# Options: all-MiniLM-L6-v2 (384d), all-mpnet-base-v2 (768d)
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Embedding vector dimensions (must match model)
EMBEDDING_DIMENSION=384

# Maximum tokens per embedding batch
MAX_TOKENS_PER_BATCH=2000

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Optional: Log file path (leave empty for console only)
# LOG_FILE=./logs/semware.log

# ==============================================================================
# ADVANCED CONFIGURATION
# ==============================================================================

# Application metadata
APP_NAME=SemWare
APP_VERSION=0.1.0