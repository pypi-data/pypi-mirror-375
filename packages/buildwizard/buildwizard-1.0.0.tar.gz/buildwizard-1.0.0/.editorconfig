# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
charset = utf-8

[*.py]
indent_size = 4
indent_style = space
max_line_length = 88
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = false
