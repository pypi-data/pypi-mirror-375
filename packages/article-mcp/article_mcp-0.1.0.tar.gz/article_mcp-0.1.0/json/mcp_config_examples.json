{
  "description": "Article MCP 文献搜索与参考文献获取服务器配置 - 整合优化版",
  "version": "2.0.0",
  "features": [
    "📚 Article MCP 文献搜索（同步/异步）",
    "📖 文献详情获取（同步/异步）",
    "📝 参考文献获取（同步/异步/批量优化）",
    "⚡ 批量查询优化（10倍性能提升）",
    "🚀 批量DOI处理（一次处理20个DOI）",
    "💾 智能缓存机制（24小时）",
    "🔄 并发控制与速率限制"
  ],
  "configs": {
    "claude_desktop_uv": {
      "description": "Claude Desktop 配置 - 使用 uv (推荐)",
      "config": {
        "mcpServers": {
          "article-mcp": {
            "command": "uv",
            "args": [
              "--directory",
              "D:/C/Documents/Program/Python_file/mcp_serve/mcp1",
              "run",
              "main.py",
              "server"
            ],
            "env": {
              "PYTHONUNBUFFERED": "1"
            }
          }
        }
      }
    },
    "claude_desktop_python": {
      "description": "Claude Desktop 配置 - 直接使用 Python",
      "config": {
        "mcpServers": {
          "article-mcp": {
            "command": "python",
            "args": ["main.py", "server"],
            "cwd": "D:/C/Documents/Program/Python_file/mcp_serve/mcp1",
            "env": {
              "PYTHONUNBUFFERED": "1"
            }
