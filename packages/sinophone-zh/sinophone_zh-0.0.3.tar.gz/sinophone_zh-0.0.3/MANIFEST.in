# 包含额外文件到分发包中
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# 包含测试文件
recursive-include test *.py

# 排除不需要的文件
exclude .gitignore
exclude *.pyc
exclude .DS_Store
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *~
global-exclude *.so
global-exclude .git*
global-exclude .coverage*
global-exclude .pytest_cache
