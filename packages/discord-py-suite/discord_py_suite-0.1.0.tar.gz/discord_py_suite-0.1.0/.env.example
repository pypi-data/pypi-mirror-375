# Discord-Py-Suite Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# Discord Bot Token - Get from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# ===========================================
# OPTIONAL SECURITY SETTINGS
# ===========================================

# Restrict bot to specific guilds (comma-separated IDs)
ALLOW_GUILD_IDS=123456789012345678,987654321098765432

# Restrict bot to specific channels (comma-separated IDs)
ALLOW_CHANNEL_IDS=123456789012345678,987654321098765432

# Default allowed mentions (none, roles, users, everyone)
DEFAULT_ALLOWED_MENTIONS=none

# ===========================================
# TRANSPORT SETTINGS
# ===========================================

# Transport type: stdio, http, websocket
TRANSPORT=stdio

# HTTP/WebSocket settings (only needed for http/websocket transport)
HOST=localhost
PORT=8000

# ===========================================
# GATEWAY SETTINGS
# ===========================================

# Enable Discord gateway for real-time events
ENABLE_GATEWAY=true

# Gateway intents (bitmask) - Default: 513 (Guilds + Guild Messages)
GATEWAY_INTENTS=513

# ===========================================
# FEATURE PACKS
# ===========================================

# Core features (always enabled)
PACK_CORE=true

# Administrative features (user management, moderation, roles)
PACK_ADMIN=true

# Media features (file uploads, embeds, reactions)
PACK_MEDIA=true

# Community features (forums, events, invites)
PACK_COMMUNITY=true

# Development tools (raw API access, debugging)
PACK_DEVTOOLS=false

# ===========================================
# ROUTE HANDLING
# ===========================================

# Enable HTTP route handling for webhooks and integrations
ENABLE_ROUTE_HANDLING=true

# Enable webhook route processing
ENABLE_WEBHOOK_ROUTES=true

# Enable guild-specific routes
ENABLE_GUILD_ROUTES=true

# Enable channel-specific routes
ENABLE_CHANNEL_ROUTES=true

# Route processing timeout (seconds)
ROUTE_TIMEOUT=30

# Maximum payload size for routes (bytes)
MAX_ROUTE_PAYLOAD_SIZE=1048576

# ===========================================
# HEALTH MONITORING
# ===========================================

# Enable health check endpoints
HEALTH_CHECK_ENABLED=true

# Enable configuration endpoint
CONFIG_ENDPOINT_ENABLED=true

# ===========================================
# AUTO-GENERATION
# ===========================================

# Enable automatic tool generation
ENABLE_AUTO_GENERATION=true

# Path to route catalog file
ROUTE_CATALOG_PATH=catalog/discord_routes.json

# ===========================================
# LOGGING
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=logs/discord_py_suite.log

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug mode
DEBUG=false

# Enable development features
DEV_MODE=false

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Application ID for slash commands (optional)
APPLICATION_ID=your_application_id_here

# Custom user agent
USER_AGENT=Discord-Py-Suite/0.1.0

# Request timeout for Discord API calls (seconds)
REQUEST_TIMEOUT=30

# Maximum retry attempts for failed requests
MAX_RETRIES=3

# Rate limit buffer (seconds)
RATE_LIMIT_BUFFER=1.0

# ===========================================
# EXAMPLE CONFIGURATIONS
# ===========================================

# Minimal configuration (just bot token)
# DISCORD_TOKEN=your_token_here

# Full security configuration
# DISCORD_TOKEN=your_token_here
# ALLOW_GUILD_IDS=123456789012345678
# ALLOW_CHANNEL_IDS=111111111111111111,222222222222222222
# DEFAULT_ALLOWED_MENTIONS=roles
# PACK_DEVTOOLS=false

# Development configuration
# DISCORD_TOKEN=your_token_here
# DEBUG=true
# LOG_LEVEL=DEBUG
# PACK_DEVTOOLS=true
# ENABLE_AUTO_GENERATION=true

# Production configuration
# DISCORD_TOKEN=your_token_here
# ALLOW_GUILD_IDS=123456789012345678,987654321098765432
# ENABLE_GATEWAY=true
# HEALTH_CHECK_ENABLED=true
# LOG_LEVEL=WARNING