## ARGUMENTS ####################
## sumstats :
## out :
## infmt = auto
## build=19
## outfmt = gwaslab
## SCRIPT #####################

python3 <<EOF
import gwaslab as gl

mysumstats = gl.Sumstats("${sumstats}",
             fmt="${infmt}",
             build="${build}", 
             verbose=True)

mysumstats.basic_check()

mysumstats.to_format("${out}", fmt="${outfmt}")

EOF